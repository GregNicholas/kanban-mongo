<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fullstack Inventory</title>
    <link rel="stylesheet" href="/css/style.css"/>
</head>
<body>
    <h1>Inventory Homepage</h1>
    <form action="/new" method="POST">
        <label for="nameInput">Input Name</label>
        <input class="form-input" type="text" name="nameInput" required>
        <label for="qtyInput">Input Quantity</label>
        <input class="form-input" type="number" name="qtyInput" value="0" min="0">
        <label for="description">Input Description</label>
        <textarea class="form-textarea" name="description" id="description" cols="30" rows="5"></textarea>
        <button class="button" type="submit">submit</button>
    </form>
    <form action="/addBoard" method="POST">
        <label for="boardName">Board Name</label>
        <input class="form-input" type="text" name="boardName" required>
        <label for="column1">Column Name</label>
        <input id="column1" class="form-input" type="text" name="columns[1]">
        <label for="column2">Column Name</label>
        <input id="column2" class="form-input" type="text" name="columns[2]">
        <button class="button" type="submit">submit</button>
    </form>
    <ul>
    <ul>
        <% console.log("BOARDS HERE ", boards) %>
        <% boards.forEach(board => { %>
            <li class="list-item" data-id=<%=board._id%>>
                <div><%= board.name %></div>
                <% board.columns.forEach(col => { %>
                    <div><%= col.name %></div>
                <% }) %>
                <a href="/edit/<%=board._id%>">Edit</a>
                <a href="/edit/delete/<%=board._id%>">Remove</a>
            </li>
        <% }) %> 
    </ul>
</body>
</html>